@{
    ViewData["Title"] = "Home Page";
}

@section Scripts
{
    <script src="~/js/signalr-client.js"></script>
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div id="connectionId" class="alert alert-primary" role="alert">
            </div>

            <button type="button" class="btn btn-success mx-1 my-1">
                Connected client count <span id="span-connected-client-count" class="badge text-bg-secondary"></span>
            </button>

            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-all-client">Send to all client.</button>

            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-caller-client">Send to requesting client.</button>

            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-others-client">Send to others client.</button>

            <div>
                <hr />
                <input type="text" class="form-control mx-1 my-1" id="text-connectionId" placeholder="Connection Id">
                <button class="btn btn-primary mx-1 my-1" id="btn-send-message-individual-client">Send to spesific client.</button>
            </div>

            <div>
                <hr />
                <div id="groupList" class="alert alert-warning" role="alert"></div>
            </div>

            <button class="btn btn-primary mx-1 my-1" id="btn-groupA-add">Join group A.</button>

            <button class="btn btn-danger mx-1 my-1" id="btn-groupA-remove">Leave group A.</button>

            <button class="btn btn-primary mx-1 my-1" id="btn-groupB-add">Join group B.</button>

            <button class="btn btn-danger mx-1 my-1" id="btn-groupB-remove">Leave group B.</button>

            <button class="btn btn-warning mx-1 my-1" id="btn-groupA-send-message">Send message to group A.</button>

            <button class="btn btn-warning mx-1 my-1" id="btn-groupB-send-message">Send message to group B.</button>
        </div>
    </div>
</div>
