@{
    ViewData["Title"] = "Home Page";
}

@section Scripts
{
    <script src="~/js/signalr-client.js"></script>
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <button type="button" class="btn btn-success mx-1 my-1">
                Connected client count <span id="span-connected-client-count" class="badge text-bg-secondary"></span>
            </button>
            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-all-client" >Send to all client.</button>
            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-caller-client">Send to the requesting client.</button>
            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-others-client">Send to the others client.</button>
        </div>
    </div>
</div>
